{
  "name": "playwright-automation-app",
  "version": "0.1.0",
  "description": "AI-Powered Automation Testing with Playwright MCP",
  "main": "server.js",
  "type": "module",
  "engines": {
    "node": ">=22.17.0"
  },
  "scripts": {
    "build": "vite build",
    "start": "vite dev",
    "dev": "vite dev",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "server": "node src/lib/mcp/server.js",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "mcp:start": "cd mcp-server && node server.js",
    "mcp:dev": "cd mcp-server && node --watch server.js",
    "mcp:install": "cd mcp-server && npm install",
    "dev:full": "concurrently \"npm run mcp:dev\" \"npm run dev\" \"npm run tauri:dev\""
  },
  "dependencies": {
    "@playwright/test": "^1.56.1",
    "@tailwindcss/vite": "^4.1.11",
    "@tauri-apps/api": "^2.6.0",
    "dotenv": "^17.2.0",
    "fs-extra": "^11.3.0",
    "nodemon": "^3.1.14",
    "svelte": "^5.35.6",
    "uuid": "^11.1.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tauri-apps/cli": "^2.6.2",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.3.2",
    "vite": "^7.1.11"
  },
  "keywords": [
    "playwright",
    "automation",
    "testing",
    "mcp",
    "svelte",
    "tauri"
  ]
}